@page "/manage-account"
@rendermode InteractiveServer

<PageTitle>Manage Account</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3>Manage Account</h3>
                </div>
                <div class="card-body">
                    <EditForm Model="@accountModel" OnValidSubmit="HandleConfirm" FormName="accountForm">
                        <DataAnnotationsValidator />
                        <div class="mb-3">
                            <label for="changeName" class="form-label">Change Name</label>
                            <InputText id="changeName" class="form-control" @bind-Value="accountModel.Name" />
                            <ValidationMessage For="@(() => accountModel.Name)" />
                        </div>
                        <div class="mb-3">
                            <label for="changeAddress" class="form-label">Change Address</label>
                            <InputTextArea id="changeAddress" class="form-control" @bind-Value="accountModel.Address" />
                            <ValidationMessage For="@(() => accountModel.Address)" />
                        </div>
                        <div class="mb-3">
                            <label for="changePassword" class="form-label">Change Password</label>
                            <InputText id="changePassword" type="password" class="form-control" @bind-Value="accountModel.Password" />
                            <ValidationMessage For="@(() => accountModel.Password)" />
                        </div>
                        <div class="mb-3">
                            <label for="retypePassword" class="form-label">Retype Password</label>
                            <InputText id="retypePassword" type="password" class="form-control" @bind-Value="accountModel.RetypePassword" />
                            <ValidationMessage For="@(() => accountModel.RetypePassword)" />
                        </div>
                        <div class="d-flex gap-2">
                            <button type="button" class="btn btn-secondary" @onclick="NavigateHome">Home</button>
                            <button type="submit" class="btn btn-primary">Confirm</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Inject] NavigationManager NavigationManager { get; set; } = default!;

    private AccountModel accountModel = new();

    private void HandleConfirm()
    {
        // TODO: Implement account update logic
        // Validate password match
        if (accountModel.Password != accountModel.RetypePassword)
        {
            // Show error
            return;
        }
        // Save changes
        NavigationManager.NavigateTo("/dashboard");
    }

    private void NavigateHome()
    {
        NavigationManager.NavigateTo("/dashboard");
    }

    public class AccountModel
    {
        public string Name { get; set; } = string.Empty;
        public string Address { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
        public string RetypePassword { get; set; } = string.Empty;
    }
}

