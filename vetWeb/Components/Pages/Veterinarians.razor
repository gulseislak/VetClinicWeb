@page "/veterinarians"
@rendermode InteractiveServer
@using DataAccess
@using vetWeb.Services
@inject VeterinarianService VetService

<PageTitle>Veterinarians</PageTitle>

<div class="container-fluid mt-4">
    <div class="row mb-3">
        <div class="col-12">
            <h2>Veterinarians</h2>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex gap-2 mb-3">
                        <button class="btn btn-primary" @onclick="ViewAllVets">View All Veterinarians</button>
                        <button class="btn btn-success" @onclick="ShowAddForm">Add Veterinarian</button>
                        <button class="btn btn-danger" @onclick="ShowRemoveForm">Remove Veterinarian</button>
                    </div>

                    @if (showAddForm)
                    {
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5>@(isEdit ? "Edit Veterinarian" : "Add Veterinarian")</h5>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Full Name</label>
                                        <input type="text" class="form-control" @bind="currentVet.FullName" @bind:event="oninput" />
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Specialty</label>
                                        <input type="text" class="form-control" @bind="currentVet.Specialty" @bind:event="oninput" />
                                    </div>
                                </div>
                                <div class="d-flex gap-2">
                                    <button class="btn btn-primary" @onclick="Save">@(isEdit ? "Update" : "Add")</button>
                                    <button class="btn btn-secondary" @onclick="Cancel">Cancel</button>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="card">
                        <div class="card-body">
                            <h5>Results</h5>
                            @if (!string.IsNullOrEmpty(errorMessage))
                            {
                                <div class="alert alert-danger">@errorMessage</div>
                            }
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Full Name</th>
                                            <th>Specialty</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (veterinarians != null && veterinarians.Any())
                                        {
                                            @foreach (var vet in veterinarians)
                                            {
                                                <tr>
                                                    <td>@vet.VetID</td>
                                                    <td>@vet.FullName</td>
                                                    <td>@vet.Specialty</td>
                                                    <td>
                                                        <button class="btn btn-sm btn-warning" @onclick="() => Edit(vet)">Edit</button>
                                                        <button class="btn btn-sm btn-danger" @onclick="() => Delete(vet.VetID)">Delete</button>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="4" class="text-center">No veterinarians found</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="d-flex gap-2">
                <button class="btn btn-secondary" @onclick="NavigateHome">Home</button>
                <button class="btn btn-primary" @onclick="HandleConfirm">Confirm</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Inject] NavigationManager NavigationManager { get; set; } = default!;

    List<Veterinarian> veterinarians = new();
    Veterinarian currentVet = new();
    bool isEdit = false;
    bool showAddForm = false;
    bool showRemoveForm = false;
    string? errorMessage;

    protected override void OnInitialized()
    {
        ViewAllVets();
    }

    void ViewAllVets()
    {
        LoadData();
        showAddForm = false;
        showRemoveForm = false;
    }

    void ShowAddForm()
    {
        showAddForm = true;
        showRemoveForm = false;
        currentVet = new Veterinarian();
        isEdit = false;
    }

    void ShowRemoveForm()
    {
        showRemoveForm = true;
        showAddForm = false;
    }

    void LoadData()
    {
        try
        {
            veterinarians = VetService.GetAll();
            errorMessage = null;
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }

    void Save()
    {
        try
        {
            if (isEdit)
            {
                VetService.Update(currentVet);
            }
            else
            {
                VetService.Add(currentVet);
            }

            currentVet = new Veterinarian();
            isEdit = false;
            showAddForm = false;
            LoadData();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }

    void Edit(Veterinarian vet)
    {
        currentVet = new Veterinarian
        {
            VetID = vet.VetID,
            FullName = vet.FullName,
            Specialty = vet.Specialty
        };
        isEdit = true;
        showAddForm = true;
        showRemoveForm = false;
    }

    void Delete(int vetId)
    {
        try
        {
            VetService.Delete(vetId);
            LoadData();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }

    void Cancel()
    {
        currentVet = new Veterinarian();
        isEdit = false;
        showAddForm = false;
        showRemoveForm = false;
    }

    void HandleConfirm()
    {
        NavigationManager.NavigateTo("/dashboard");
    }

    void NavigateHome()
    {
        NavigationManager.NavigateTo("/dashboard");
    }
}
