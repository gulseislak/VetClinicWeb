@page "/manage-treatments"
@rendermode InteractiveServer
@inject TreatmentService TreatmentService
@using DataAccess
@using vetWeb.Services

<PageTitle>Manage Treatments</PageTitle>

<div class="container-fluid mt-4">
    <div class="row mb-3">
        <div class="col-12">
            <h2>Manage Treatments</h2>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex gap-2 mb-3">
                        <button class="btn btn-primary" @onclick="ViewTreatments">View Treatments</button>
                        <button class="btn btn-success" @onclick="ShowAddForm">Add Treatments</button>
                        <button class="btn btn-danger" @onclick="ShowRemoveForm">Remove Treatments</button>
                        <button class="btn btn-warning" @onclick="ShowEditForm">Edit Treatments</button>
                    </div>

                    @if (showAddForm || showEditForm)
                    {
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5>@(showEditForm ? "Edit Treatment" : "Add Treatment")</h5>
                                <EditForm Model="@currentTreatment" OnValidSubmit="Save" FormName="treatmentForm">
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">Treatment Name</label>
                                            <InputText class="form-control" @bind-Value="currentTreatment.Name" />
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">Unit Price</label>
                                            <InputNumber class="form-control" @bind-Value="currentTreatment.UnitPrice" />
                                        </div>
                                    </div>
                                    <div class="d-flex gap-2">
                                        <button type="submit" class="btn btn-primary">@(isEdit ? "Update" : "Add")</button>
                                        <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
                                    </div>
                                </EditForm>
                            </div>
                        </div>
                    }

                    <div class="card">
                        <div class="card-body">
                            <h5>Results</h5>
                            @if (!string.IsNullOrEmpty(errorMessage))
                            {
                                <div class="alert alert-danger">@errorMessage</div>
                            }
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Treatment Name</th>
                                            <th>Unit Price</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (treatments != null && treatments.Any())
                                        {
                                            @foreach (var t in treatments)
                                            {
                                                <tr>
                                                    <td>@t.TreatmentID</td>
                                                    <td>@t.Name</td>
                                                    <td>@t.UnitPrice</td>
                                                    <td>
                                                        <button class="btn btn-sm btn-warning" @onclick="() => Edit(t)">Edit</button>
                                                        <button class="btn btn-sm btn-danger" @onclick="() => Delete(t.TreatmentID)">Delete</button>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="4" class="text-center">No treatments found</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="d-flex gap-2">
                <button class="btn btn-secondary" @onclick="NavigateHome">Home</button>
                <button class="btn btn-primary" @onclick="HandleConfirm">Confirm</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Inject] NavigationManager NavigationManager { get; set; } = default!;

    List<Treatment> treatments = new();
    Treatment currentTreatment = new();
    bool isEdit = false;
    bool showAddForm = false;
    bool showEditForm = false;
    bool showRemoveForm = false;
    string? errorMessage;

    protected override void OnInitialized()
    {
        ViewTreatments();
    }

    void ViewTreatments()
    {
        LoadData();
        showAddForm = false;
        showEditForm = false;
        showRemoveForm = false;
    }

    void ShowAddForm()
    {
        showAddForm = true;
        showEditForm = false;
        showRemoveForm = false;
        currentTreatment = new Treatment();
        isEdit = false;
    }

    void ShowEditForm()
    {
        showEditForm = true;
        showAddForm = false;
        showRemoveForm = false;
    }

    void ShowRemoveForm()
    {
        showRemoveForm = true;
        showAddForm = false;
        showEditForm = false;
    }

    void LoadData()
    {
        try
        {
            treatments = TreatmentService.GetAll();
            errorMessage = null;
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }

    void Save()
    {
        try
        {
            if (isEdit)
            {
                TreatmentService.Update(currentTreatment);
            }
            else
            {
                TreatmentService.Add(currentTreatment);
            }

            currentTreatment = new Treatment();
            isEdit = false;
            showAddForm = false;
            showEditForm = false;
            LoadData();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }

    void Edit(Treatment t)
    {
        currentTreatment = new Treatment
        {
            TreatmentID = t.TreatmentID,
            Name = t.Name,
            UnitPrice = t.UnitPrice
        };
        isEdit = true;
        showEditForm = true;
        showAddForm = true;
        showRemoveForm = false;
    }

    void Delete(int id)
    {
        try
        {
            TreatmentService.Delete(id);
            LoadData();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }

    void Cancel()
    {
        currentTreatment = new Treatment();
        isEdit = false;
        showAddForm = false;
        showEditForm = false;
        showRemoveForm = false;
    }

    void HandleConfirm()
    {
        NavigationManager.NavigateTo("/admin");
    }

    void NavigateHome()
    {
        NavigationManager.NavigateTo("/admin");
    }
}

